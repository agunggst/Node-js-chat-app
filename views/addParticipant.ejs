<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Node.js Chat App</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  </head>
  <body>
    <div class="container container-shadow">
      <div class="rl-padding header">
        <div class="info">
          <img src="<%=data.roomData.roomAvatar%>" class="profile-pict">
          <div class="text-username"><%=data.roomData.roomName%></div>
        </div>
        <a href="/rooms/<%=data.roomData.id%>/participants" class="change-user-link">
          <button class="button-default change-user">
            <span class="material-symbols-outlined">arrow_back</span>
          </button>
        </a>
      </div>
      <div class="rl-padding participants">
        <div class="subtitle" style="padding-bottom: 20px;">
          Add participants to room
        </div>
        <%if (data.nonParticipants.length) {%>
          <%data.nonParticipants.forEach(participant => {%>
            <div class="participant">
              <div class="left">
                <img src="<%=participant.avatar%>" class="profile-pict">
                <div class="text-regular" style="margin-left: 16px;"><%=participant.username%></div>
              </div>
              <div class="right">
                <a href="/rooms/<%=data.roomData.id%>/add-participant/<%=participant.id%>">
                  <button class="button-default">
                    <span class="material-symbols-outlined">person_add</span>
                  </button>
                </a>
              </div>
            </div>
        <%})%>
        <%} else {%>
          <div class="empty-state">All users has been added to this group.</div>
        <%}%>
      </div>
    </div>
  </body>
</html>